{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "incremental": true
    }
}
