{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@shared/*": ["src/shared/*"],
            "@auth/*": ["src/auth/*"],
            "@dictionary/*": ["src/dictionary/*"],
            "@users/*": ["src/users/*"],
            "@contacts/*": ["src/contacts/*"],
            "@company/*": ["src/company/*"],
            "@good/*": ["src/good/*"],
            "@order/*": ["src/order/*"],
            "@enduser/*": ["src/enduser/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
